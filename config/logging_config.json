{
  "version": 1,
  "formatters": {
    "detailed":{
      "format":"%(asctime)s - %(name)s::%(lineno)s - %(levelname)s - %(message)s"
    }
  },
  "handlers":{
    "uvicorn": {
      "class": "logging.StreamHandler",
      "level": "DEBUG",
      "formatter": "detailed",
      "stream": "ext://sys.stdout"
    },
    "std":{
      "class": "logging.StreamHandler",
      "level": "DEBUG",
      "formatter": "detailed"
    },
    "file": {
      "class": "logging.FileHandler",
      "level": "INFO",
      "formatter": "detailed",
      "filename": "logs/test.log"
    }
  },
  "loggers": {
    "app":{
      "handlers": ["std", "file", "uvicorn"],
      "level": "INFO"
    }
  }
}
